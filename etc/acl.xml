<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Hryvinskyi_ApiLogger::api_logger" title="API Logger" sortOrder="100">
                    <resource id="Hryvinskyi_ApiLogger::dashboard" title="Dashboard" sortOrder="5"/>
                    <resource id="Hryvinskyi_ApiLogger::logs" title="View Logs" sortOrder="10"/>
                    <resource id="Hryvinskyi_ApiLogger::replay" title="Replay Requests" sortOrder="15"/>
                    <resource id="Hryvinskyi_ApiLogger::delete" title="Delete Logs" sortOrder="20"/>
                    <resource id="Hryvinskyi_ApiLogger::config" title="Configuration" sortOrder="30"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Hryvinskyi_ApiLogger::config_api_logger" title="API Logger Configuration"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>