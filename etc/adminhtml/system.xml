<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="api_logger" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>API Logger</label>
            <tab>hryvinskyi</tab>
            <resource>Hryvinskyi_ApiLogger::config</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>

                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable API Logging</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Master switch to enable/disable all API logging</comment>
                </field>

                <field id="enabled_endpoints" translate="label comment" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled Endpoints</label>
                    <frontend_model>Hryvinskyi\ApiLogger\Block\Adminhtml\System\Config\EndpointSelector</frontend_model>
                    <backend_model>Hryvinskyi\ApiLogger\Model\Config\Backend\EndpointList</backend_model>
                    <comment><![CDATA[Select which API endpoints to log. <strong>By default, all endpoints are disabled.</strong> Use the advanced selector below to choose specific endpoints.]]></comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>

                <field id="enabled_response_codes" translate="label comment" type="multiselect" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled Response Codes</label>
                    <source_model>Hryvinskyi\ApiLogger\Model\Config\Source\ResponseCodes</source_model>
                    <comment><![CDATA[Select which HTTP response codes to log. Leave empty to log all response codes.]]></comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>

                <field id="log_request_headers" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Log Request Headers</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Include HTTP request headers in logs</comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>

                <field id="log_request_body" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Log Request Body</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Include request payload in logs</comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>

                <field id="log_response_headers" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Log Response Headers</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Include HTTP response headers in logs</comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>

                <field id="log_response_body" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Log Response Body</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Include response payload in logs</comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>

            <group id="security" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Security &amp; Sanitization</label>

                <field id="sanitize_secrets" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sanitize Sensitive Data</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Automatically hash/mask sensitive fields before logging</comment>
                </field>

                <field id="secret_fields" translate="label comment" type="textarea" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Secret Field Names</label>
                    <comment><![CDATA[Comma-separated list of field names to treat as secrets (e.g., password, token, authorization, api_key, secret, card_number, cvv). Case-insensitive pattern matching.]]></comment>
                    <depends>
                        <field id="sanitize_secrets">1</field>
                    </depends>
                </field>
            </group>

            <group id="cleanup" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Cleanup &amp; Retention</label>

                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Automatic Cleanup</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Automatically delete old log entries via cron</comment>
                </field>

                <field id="retention_days" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Retention Period (Days)</label>
                    <comment>Delete log entries older than this many days (0 = never delete)</comment>
                    <validate>validate-number validate-zero-or-greater</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>